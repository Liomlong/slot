// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  tgId         String   @unique
  points       Int      @default(0)
  usdt         Float    @default(0)
  spinsLeft    Int      @default(0)
  lastSpinTime DateTime @default(now())
}